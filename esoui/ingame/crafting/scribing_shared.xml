<GuiXml>
    <Controls>
        <TopLevelControl name="ZO_InitialScribeOpenSkillsConfirmationDialog" inherits="ZO_CustomDialogBase" >
            <Controls>
                <Label name="$(parent)Text" inherits="ZO_DialogContentAnchors" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" font="ZoFontGame"/>

                <Texture name="$(parent)ScribedSkill" >
                    <Dimensions x="56" y="56"/>
                    <Anchor point="TOP" relativeTo="$(parent)Text" relativePoint="BOTTOM" offsetY="16" />
                </Texture>

                <Control name="$(parent)Cancel" inherits="ZO_CustomDialogButton"/>
                <Control name="$(parent)Confirm" inherits="ZO_CustomDialogButton"/>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>