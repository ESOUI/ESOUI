<GuiXml>
    <Controls>
        <TopLevelControl name="ZO_EndDunHUDTracker" inherits="ZO_HUDTracker_Base_Template" hidden="false">
            <OnInitialized>
                ZO_EndlessDungeonHUDTracker.OnInitialized(self)
            </OnInitialized>

            <Controls>
                <Control name="$(parent)Container" override="true">
                    <Controls>
                        <Label name="$(parent)Header" override="true" text="SI_ENDLESS_DUNGEON_BUFF_TRACKER_TITLE" />

                        <Texture name="$(parent)Icon" textureFile="EsoUI/Art/ZoneStories/completionTypeIcon_lorebooks.dds" excludeFromResizeToFitExtents="true" level="3">
                            <Anchor point="RIGHT" relativeTo="$(parent)Header" relativePoint="LEFT" offsetX="-3" />
                        </Texture>

                        <Control name="$(parent)ShowBuffTracker" inherits="ZO_KeybindButton" excludeFromResizeToFitExtents="true" />
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>