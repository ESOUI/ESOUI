            <Anchor point="BOTTOMRIGHT" offsetX="-18" />

            <OnReceiveDrag>
                ZO_InventoryLandingArea_DropCursor(self)
            </OnReceiveDrag>

            <OnMouseUp>
                if button == MOUSE_BUTTON_INDEX_LEFT and upInside then
                    ZO_InventoryLandingArea_DropCursor(self)
                end
            </OnMouseUp>
        </Control>
    </Controls>
</GuiXml>