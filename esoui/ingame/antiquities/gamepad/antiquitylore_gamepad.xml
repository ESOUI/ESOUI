<GuiXml>
    <Controls>
        <TopLevelControl name="ZO_AntiquityLoreTopLevel_Gamepad" inherits="ZO_Gamepad_ParametricList_Screen" hidden="true">
            <OnInitialized>
                ZO_AntiquityLoreTopLevel_Gamepad_OnInitialized(self)
            </OnInitialized>

            <Controls>
                <Control name="$(parent)LoreEntries">
                    <Anchor point="TOPLEFT" relativeTo="GuiRoot" offsetX="ZO_GAMEPAD_QUADRANT_2_LEFT_OFFSET" />
