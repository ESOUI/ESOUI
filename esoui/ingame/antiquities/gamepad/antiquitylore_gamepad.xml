                    <Dimensions x="ZO_GAMEPAD_QUADRANT_2_3_4_WIDTH" />

                    <Controls>
                        <Scroll name="$(parent)Scroll">
                            <AnchorFill />

                            <Controls>
                                <Control name="$(parent)ScrollChild">
                                    <Anchor point="TOPLEFT" />
                                    <Dimensions x="ZO_GAMEPAD_QUADRANT_2_3_4_WIDTH" />
                                </Control>
                            </Controls>
                        </Scroll>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
