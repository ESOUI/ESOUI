<GuiXml>
    <Controls>
        <TopLevelControl name="ZO_HouseInformationTrackerTopLevel" inherits="ZO_HUDTracker_Base_Template">
            <OnInitialized>
                ZO_HouseInformationTracker_OnInitialized(self)
            </OnInitialized>

            <Controls>
                <Control name="$(parent)Container" override="true">
                    <Controls>
                        <Label name="$(parent)Population" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)SubLabel" relativePoint="BOTTOMLEFT" />
                            <Anchor point="TOPRIGHT" relativeTo="$(parent)SubLabel" relativePoint="BOTTOMRIGHT" />
                        </Label>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>