<GuiXml>
    <Controls>
        <Control name="ZO_PlayerEmoteRadialMenuEntryTemplate_Gamepad" inherits="ZO_GamepadSelectableItemRadialMenuEntryTemplate" scale=".75" virtual="true">
            <OnInitialized>
                ZO_PlayerEmoteRadialMenuEntryTemplate_OnInitialized(self)
            </OnInitialized>
            <Controls>
                <Label name="$(parent)Label" horizontalAlignment="CENTER">
                    <Anchor point="TOP" relativeTo="$(parent)Icon" relativePoint="BOTTOM" offsetY="5" />
                </Label>
            </Controls>
        </Control>
        
        <Control name="ZO_PlayerEmoteRadialMenuEntryTemplate_Keyboard" inherits="ZO_SelectableItemRadialMenuEntryTemplate" virtual="true">
            <OnInitialized>
                ZO_PlayerEmoteRadialMenuEntryTemplate_OnInitialized(self)
            </OnInitialized>
            <Controls>
                <Label name="$(parent)Label" horizontalAlignment="CENTER">
                    <Anchor point="TOP" relativeTo="$(parent)Icon" relativePoint="BOTTOM" offsetY="5" />
                </Label>
            </Controls>
        </Control>
        
        <TopLevelControl name="ZO_PlayerEmoteQuickslot_Gamepad_TopLevel">
            <AnchorFill/>

            <OnInitialized>
                ZO_PlayerEmoteQuickslot_Gamepad_Initialize(self)
            </OnInitialized>
            
            <Controls>
                <Control name="$(parent)Menu" inherits="ZO_RadialMenuHUDSize_Gamepad"/>
            </Controls>
        </TopLevelControl>

        <TopLevelControl name="ZO_PlayerEmoteQuickslot_Keyboard_TopLevel">
            <AnchorFill/>

            <OnInitialized>
                ZO_PlayerEmoteQuickslot_Keyboard_Initialize(self)
            </OnInitialized>

            <Controls>
                <Control name="$(parent)Menu" inherits="ZO_RadialMenuTemplate"/>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
