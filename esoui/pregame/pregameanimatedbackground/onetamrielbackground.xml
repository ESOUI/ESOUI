<GuiXml>
    <Animations>
        <AnimationTimeline name="ZO_OneTamrielBackgroundFadeAnimation">
            <Animations>
                <!-- Map Elements -->
                <AlphaAnimation duration="ZO_ONE_TAMRIEL_BACKGROUND_MAP_FADE_DURATION_MS" startAlpha="0" endAlpha="1"/>
