                <Control name="$(parent)Canvas">
                    <AnchorFill/>

                    <Controls>
                        <Texture name="$(parent)Map" textureFileReleaseOption="RELEASE_TEXTURE_AT_ZERO_REFERENCES" textureFile="EsoUI/Art/PregameAnimatedBackground/OneTamriel/Map.dds" pixelRoundingEnabled="false" tier="LOW" />

                        <Texture name="$(parent)Lines" textureFileReleaseOption="RELEASE_TEXTURE_AT_ZERO_REFERENCES" textureFile="EsoUI/Art/PregameAnimatedBackground/OneTamriel/Lines.dds" pixelRoundingEnabled="false" tier="LOW" />

